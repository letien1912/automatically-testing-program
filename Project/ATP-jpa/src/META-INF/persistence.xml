<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.1" xmlns="http://xmlns.jcp.org/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd">
	<persistence-unit name="Entities">
		<jta-data-source>java:/ATP</jta-data-source>
		<class>Entities.AcceptOutput</class>
		<class>Entities.Contest</class>
		<class>Entities.Input</class>
		<class>Entities.NotAcceptOutput</class>
		<class>Entities.Output</class>
		<class>Entities.Problem</class>
		<class>Entities.Student_ContestDetail</class>
		<class>Entities.Student</class>
		<class>Entities.Submission</class>
		<class>Entities.SubmissionResult</class>
		<class>Entities.Teacher</class>
		<properties>
			<property name="javax.persistence.schema-generation.database.action" value="drop-and-create"/>
			<property name="eclipselink.ddl-generation" value="drop-and-create-tables"/>
		</properties>
	</persistence-unit>
</persistence>
